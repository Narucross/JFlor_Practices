<Application x:Class="PropertyChangeListeners.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             StartupUri="MainWindow.xaml">
    <Application.Resources>

        <DataTemplate x:Key="ListBoxInformation">
            <Border BorderThickness="2" BorderBrush="BlanchedAlmond" CornerRadius="2">
                <StackPanel Background="Teal" Orientation="Horizontal">
                    <TextBlock Text="{Binding Path=FirstName, FallbackValue=empty}"/>
                    <TextBlock Text="{Binding Path=LastName, FallbackValue=EmptyAgain}" Padding="4,0,0,0"/>
                </StackPanel>
            </Border>
        </DataTemplate>

    </Application.Resources>
</Application>
